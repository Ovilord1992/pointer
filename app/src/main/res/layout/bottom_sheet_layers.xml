<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20sp"
    android:paddingEnd="20sp"
    android:paddingTop="3sp"
    android:paddingBottom="30sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_sheet">

    <ImageView
        android:id="@+id/line_sheet"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="50dp"
        android:layout_height="10dp"
        android:src="@drawable/line_sheet"/>

    <TextView
        android:id="@+id/text_maps_name"
        android:text="Схемы карт"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/line_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/map_linear_layers"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/text_maps_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/layer_sput"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:background="@drawable/sputnik_layer"/>
        <Button
            android:id="@+id/layer_shema"
            android:layout_marginStart="10dp"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:background="@drawable/shema_layers"/>
        <Button
            android:id="@+id/layer_probki"
            android:layout_marginStart="10dp"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:background="@drawable/svetophor_layer"/>


    </LinearLayout>

    <TextView
        android:id="@+id/color_shema"
        android:text="Цветовые схемы: почва | вода"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/map_linear_layers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/color_shema"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/color_layer_standart"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:background="@drawable/color_maps_standart"/>
        <Button
            android:id="@+id/color_layer_yellow"
            android:layout_marginStart="10dp"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:background="@drawable/color_maps_yellov"/>
        <Button
            android:id="@+id/color_layer_blue"
            android:layout_marginStart="10dp"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:background="@drawable/color_maps_blue"/>
        <Button
            android:id="@+id/color_layer_black"
            android:layout_marginStart="10dp"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:background="@drawable/color_maps_black"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>